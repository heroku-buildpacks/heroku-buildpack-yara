#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

# Parameters
BUILD_DIR=$1
CACHE_DIR="${2}/${STACK}"

# Fail fast
set -e

# Debug
set -x

# Clean up leaking environment
unset GIT_DIR

# Functions
function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

function set-env (){
  echo "export $1=$2" >> $PROFILE_PATH
}

function set-default-env (){
  echo "export $1=\${$1:-$2}" >> $PROFILE_PATH
}

# Configuration
YARA_VERSION='3.4.0'
S3_BUCKET='rhyselsmore-yara-buildpack'

# Setup profile file
PROFILE_PATH="$BUILD_DIR/.profile.d/yara.sh"
mkdir -p $(dirname $PROFILE_PATH)

# Display some information
echo "Using yara version: 3.4.0" | indent

# Vendor directories
VENDORED_YARA="vendor/yara/3.4.0"
TARGET_VENDOR_DIR="vendor"

if [ ! -d $CACHE_DIR/$VENDORED_GEOS ]; then
  echo "-----> Fetching and vendoring yara"

  location="${CACHE_DIR}/${VENDORED_YARA}"
  rm -rf "$CACHE_DIR/vendor/yara"

  mkdir -p $location
  package="https://${S3_BUCKET}.s3.amazonaws.com/${STACK}/yara-$YARA_VERSION.tar.gz"
  curl $package -s -o - | tar xzf - -C $location
fi

mkdir -p $BUILD_DIR/$TARGET_VENDOR_DIR
cp -r $CACHE_DIR/$VENDORED_YARA/* $BUILD_DIR/$TARGET_VENDOR_DIR &> /dev/null || true

pwd
echo "---"
ls -la $BUILD_DIR
echo "---"
ls -la vendor
echo "---"
ls -la /app/code

echo "-----> Vendoring yara libraries done"
